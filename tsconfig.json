{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "outDir": "lib"
    },
    "include": [
        "src/**/*.ts"
    ]
}